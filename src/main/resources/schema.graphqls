type Ingredient {
    name: String!
    quantity(unit: QuantityUnit = UNIT): Float
}

type Dish {
    id: ID
    name: String!
    ingredients: [Ingredient!]
    notes: String
    cookingTime: Int
}

type Meal {
    id: ID!
    name: String
    main: Dish!
    sides: [Dish!]!
    notes: String
}

type Day {
    date: Date!
    meal: Meal!
    notes: String
}